{
  "name": "webnomad-bulma-template",
  "version": "0.2.0",
  "description": "Webnomad setup using Bulma",
  "keywords": [
    "dyne",
    "webnomad",
    "sass",
    "bulma",
    "css",
    "start"
  ],
  "author": "Denis Roio <jaromil@dyne.org> (https://dyne.org)",
  "license": "MIT",
  "scripts": {
    "css-deploy": "npm-run-all css-build css-postcss",
    "css-build": "node-sass _sass/main.scss docs/css/main.css",
    "css-postcss": "postcss --use autoprefixer --output docs/css/main.css docs/css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm-run-all --parallel css-deploy js-build index-build",
    "js-build": "babel _javascript --out-dir docs/lib",
    "js-watch": "npm run js-build -- --watch",
    "index-watch": "_shell/markdown-inline-tag -w views/index.html docs/index.html",
    "index-build": "_shell/markdown-inline-tag views/index.html docs/index.html",
    "page-watch": "_shell/markdown-inline-tag -w views/comunicati.html docs/comunicati.html",
    "page-build": "_shell/markdown-inline-tag views/comunicati.html docs/comunicati.html",
    "preview": "watch-http-server ./docs -o",
    "template:comunicati" : "echo '{\"comunicati\": true}' | mustache - `ls views/partials/*.mustache | xargs -I % sh -c 'echo \"-p %\"'` views/comunicati.mustache > views/comunicati.html",
    "template:index" : "echo '{\"home\": true}' | mustache - `ls views/partials/*.mustache | xargs -I % sh -c 'echo \"-p %\"'` views/index.mustache > views/index.html",
    "template:news" : "node _shell/news.js | mustache - `ls views/partials/*.mustache | xargs -I % sh -c 'echo \"-p %\"'` views/news.mustache > docs/news.html",
    "template": "npm-run-all template:index template:comunicati template:news",
    "prestart": "npm run template",
    "start": "npm-run-all --parallel css-watch js-watch index-watch page-watch preview"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "bootstrap-italia": "^1.4.1",
    "bulma": "^0.9.0",
    "got": "^11.8.0",
    "govuk-frontend": "^3.9.0",
    "http-server": "^0.12.3",
    "metascraper": "^5.14.18",
    "metascraper-author": "^5.14.18",
    "metascraper-date": "^5.14.18",
    "metascraper-description": "^5.14.18",
    "metascraper-image": "^5.14.18",
    "metascraper-publisher": "^5.14.18",
    "metascraper-title": "^5.14.18",
    "metascraper-url": "^5.14.18",
    "mustache": "^4.0.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.3",
    "postcss": "^8.1.4",
    "postcss-cli": "^8.0.0",
    "watch-http-server": "^0.7.6"
  },
  "dependencies": {}
}
